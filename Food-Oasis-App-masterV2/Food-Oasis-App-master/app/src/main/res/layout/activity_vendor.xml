<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".VendorActivity">


    <Button
        android:id="@+id/editButton2"
        android:layout_width="155dp"
        android:layout_height="67dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="28dp"
        android:background="@color/colorOrange"
        android:onClick="addItemsbuttonClicked"
        android:text="Add items"

        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signOutButton2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currItems"
        app:layout_constraintVertical_bias="0.956" />

    <Button
        android:id="@+id/signOutButton2"
        android:layout_width="155dp"
        android:layout_height="67dp"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="28dp"
        android:background="@color/colorOrange"
        android:onClick="addItemsbuttonClicked"
        android:text="Sign Out"

        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currItems"
        app:layout_constraintVertical_bias="0.956" />

    <TextView
        android:id="@+id/currItems"
        android:layout_width="315dp"
        android:layout_height="51dp"
        android:layout_marginTop="4dp"
        android:text="Current Items: "
        android:textColor="@color/colorGreen"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="389dp"
        android:layout_height="444dp"
        app:layout_constraintBottom_toTopOf="@+id/editButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currItems"
        app:layout_constraintVertical_bias="0.571" />




</androidx.constraintlayout.widget.ConstraintLayout>